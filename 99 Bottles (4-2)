/*
 * Programming Quiz: 99 Bottles of Juice (4-2)
 *
 * Use the following `while` loop to write out the song "99 bottles of juice".
 * Log the your lyrics to the console.
 *
 * Note
 *   - Each line of the lyrics needs to be logged to the same line.
 *   - The pluralization of the word "bottle" changes from "2 bottles" to "1 bottle" to "0 bottles".
 */
// This defines the upper limit.
var num = 99;
var container = "bottles"

// This defines the lower limit. 
// The step is defined.
// The main string is defined.
// Bottle changes when num=1


while (num >=0) {
    console.log(num + " " + container + " of juice on the wall! " + num + " " + container + " of juice! Take one down, and pass it around . . . " + (num -1) + " " + container + " of juice on the wall!");
    num =(num -1)
    if (num === 1) {
    (container = "bottle");
}
}
